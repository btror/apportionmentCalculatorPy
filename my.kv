<MyGrid>
    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 1, .5, .5, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Ticer\'s Apportionment Calculator 0.1.0'
            font_size: 24


    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 1, .4, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Spinner:
            text: 'select method'
            values: 'Hamilton', 'Jefferson', 'Adam', 'Webster'


    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 1, .3, .3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            text: 'seats'
            halign: 'center'


    BoxLayout:
        orientation: 'horizontal'

        canvas:
            Color:
                rgba: 1, .2, .2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: '+'
            font_size: 22

        Button:
            text: '-'
            font_size: 22

        Button:
            text: 'clear'
            font_size: 22

        Button:
            text: '='
            font_size: 22